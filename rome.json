{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": [
			"**/dist/**", "**/.solid/**", "**/.output/**", "**/.vercel/**",
			"**/.netlify/**", "**/netlify/**", "**/node_modules/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"useSingleCaseStatement": "error"
			},
			"nursery": {},
			"a11y": {},
			"complexity": {},
			"correctness": {},
			"performance": {},
			"security": {},
			"suspicious": {}
		}
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
